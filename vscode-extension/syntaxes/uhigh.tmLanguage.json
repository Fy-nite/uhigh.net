{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Uhigh",
    "patterns": [
        {
            "include": "#keywords"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#comments"
        }
    ],
    "repository": {
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.uhigh",
                    "match": "\\b(if|else|while|for|in|return|break|continue|try|catch|throw|match|switch|case|default|yield|await|async)\\b"
                },
                {
                    "name": "keyword.declaration.uhigh",
                    "match": "\\b(var|const|let|mut|func|class|namespace|import|from|this|enum|interface|extension|record|struct|union|module|use|field|get|set|macro)\\b"
                },
                {
                    "name": "storage.modifier.uhigh",
                    "match": "\\b(public|private|protected|internal|static|abstract|virtual|override|sealed|readonly)\\b"
                },
                {
                    "name": "constant.language.uhigh",
                    "match": "\\b(true|false|null|int|float|string|bool|sharp)\\b"
                },
                {
                    "name": "keyword.operator.uhigh",
                    "match": "(\\?|\\?\\?|\\?\\.|!|\\+|\\-|\\*|\\/|%|=|==|!=|<|>|<=|>=|&&|\\|\\||!|\\+\\+|\\-\\-|\\+=|\\-=|\\*=|\\/=|=>|\\.|\\.{2}|\\.{2}<|_)"
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.double.uhigh",
                    "begin": "\"",
                    "end": "\""
                }
            ]
        },
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.double-slash.uhigh",
                    "begin": "//",
                    "end": "$"
                }
            ]
        }
    },
    "scopeName": "source.uhigh"
}
