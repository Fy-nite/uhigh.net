{
    "name": "uhigh-language",
    "displayName": "Uhigh Language Support",
    "description": "Language support for the Uhigh programming language with built-in parsing",
    "version": "1.0.0",
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "uhigh",
                "aliases": [
                    "Uhigh",
                    "uhigh"
                ],
                "extensions": [
                    ".uh"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "uhigh",
                "scopeName": "source.uhigh",
                "path": "./syntaxes/uhigh.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "command": "uhigh.compile",
                "title": "Compile Uhigh File",
                "category": "Uhigh",
                "icon": "$(play)"
            },
            {
                "command": "uhigh.showOutput",
                "title": "Show Output",
                "category": "Uhigh"
            },
            {
                "command": "uhigh.parseCurrentFile",
                "title": "Parse Current File",
                "category": "Uhigh"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "uhigh.compile",
                    "when": "resourceExtname == .uh"
                },
                {
                    "command": "uhigh.parseCurrentFile",
                    "when": "resourceExtname == .uh"
                }
            ],
            "editor/context": [
                {
                    "command": "uhigh.compile",
                    "when": "resourceExtname == .uh",
                    "group": "uhigh"
                },
                {
                    "command": "uhigh.parseCurrentFile",
                    "when": "resourceExtname == .uh",
                    "group": "uhigh"
                }
            ],
            "editor/title": [
                {
                    "command": "uhigh.compile",
                    "when": "resourceExtname == .uh",
                    "group": "navigation"
                }
            ]
        },
        "configuration": {
            "type": "object",
            "title": "Uhigh Language",
            "properties": {
                "uhigh.compiler.path": {
                    "type": "string",
                    "default": "dotnet run",
                    "description": "Path to the Uhigh compiler"
                },
                "uhigh.diagnostics.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable diagnostic reporting"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/vscode": "^1.74.0",
        "@types/node": "16.x",
        "typescript": "^4.9.4"
    }
}
